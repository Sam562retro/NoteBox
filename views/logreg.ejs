<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="/css/login.css">
  <link
        href="https://fonts.googleapis.com/css2?family=Alex+Brush&family=Alfa+Slab+One&family=Montserrat:wght@600;700;800;900&family=Mouse+Memoirs&family=Oswald:wght@200;300;400;500;600;700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,900&family=Roboto+Mono:wght@100;200;300;400;500;600;700&family=Roboto+Slab:wght@100;300;500&display=swap"
        rel="stylesheet">
</head>

<body>
  <div class="tabsBox">
    <div class="box">
      <div id="loginDiv" class="login">
        <div class="headings">
          <div class="heading">NotesBox</div>
          <div class="subHeading">Here you are again!</div>
        </div>


        <form action="/login" method="POST">
          <div class="container">
            <input onclick="labelMove()" class="email" type="email" id="email" name="email" required>
            <label id="Elabel" class="label">Email</label>
          </div>
          <div class="container">
            <input type="password" id="password" name="pass" required>
            <label>Password</label>
          </div>
          <br><br>
          <button class="sign-in" onclick="window.location.href='locate.html';" type="submit">Login</button>
        </form>

      </div>
      <div id="registerDiv" class="register display">
        <div class="headings">
          <div class="heading">Register</div>
          <div class="subHeading">Glad you are joining us!</div>
        </div>

        <form action="/register" method="POST">
          <div class="container">
            <input onclick="labelMove()" class="email" type="text" id="name" name="name" required>
            <label id="Elabel" class="label">Name</label>
          </div>
          <div class="container">
            <input onclick="labelMove()" class="email" type="email" id="email" name="email" required>
            <label id="Elabel" class="label">Email</label>
          </div>
          <div class="container">
            <input type="password" id="password" name="pass" required>
            <label>Password</label>
          </div>
          <br><br>
          <button onclick="window.location.href='locate.html';" class="sign-in" type="submit">Register</button>
        </form>

      </div>
    </div>
    <div class="tabs">
      <div id="login" class="tab active" onclick="activeL()">
        Login
      </div>
      <div id="register" class="tab" onclick="activeR()">
        Register
      </div>
    </div>
  </div>
</body>
<script>
  function activeL() {
    login = document.getElementById("login");
    loginDiv = document.getElementById("loginDiv");
    regsiterDiv = document.getElementById("registerDiv");
    regsiter = document.getElementById("register");
    login.classList.add("active")
    register.classList.remove("active")
    loginDiv.classList.remove("display")
    regsiterDiv.classList.add("display")
  }
  function activeR() {
    login = document.getElementById("login");
    loginDiv = document.getElementById("loginDiv");
    regsiterDiv = document.getElementById("registerDiv");
    regsiter = document.getElementById("register");
    login.classList.remove("active")
    register.classList.add("active")
    loginDiv.classList.add("display")
    regsiterDiv.classList.remove("display")
  }
</script>
</html>